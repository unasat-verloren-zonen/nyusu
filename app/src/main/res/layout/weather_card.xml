<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sm_padding">

            <LinearLayout
                android:id="@+id/linearlayout_weather"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textview_weather_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingEnd="@dimen/sm_padding"
                    android:text="---" />

                <TextView
                    android:id="@+id/textview_weather_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="--Â°"
                    android:textFontWeight="bold"
                    android:textSize="30sp" />

                <!--<com.thbs.skycons.library.SunView-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--app:isStatic = "false"-->
                    <!--app:strokeColor = "#000000"-->
                    <!--app:bgColor = "#ffffff"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingRight="@dimen/sm_padding"
                android:paddingBottom="@dimen/sm_padding">

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:textSize="50sp"
                    android:gravity="end"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/textview_greeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="end"
                    android:layout_marginLeft="10dp"
                    android:text="---, ---"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</merge>